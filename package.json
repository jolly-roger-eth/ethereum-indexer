{
  "name": "ethereum-indexer-monorepo",
  "private": true,
  "version": "0.0.1",
  "devDependencies": {
    "@changesets/cli": "^2.26.0",
    "ipfs-gateway-emulator": "4.2.1-ipfs.2",
    "set-defaults": "^0.0.2",
    "syncpack": "^9.8.4",
    "typedoc": "^0.24.8",
    "typedoc-plugin-markdown": "4.0.0-next.18",
    "typedoc-vitepress-theme": "1.0.0-next.2",
    "typescript": "^4.9.5",
    "vitepress": "1.0.0-rc.4"
  },
  "volta": {
    "node": "18.7.0"
  },
  "scripts": {
    "prepare": "set-defaults .vscode",
    "build": "pnpm -r build",
    "sync-deps": "syncpack fix-mismatches",
    "publish-typedoc": "typedoc --options typedoc.json ",
    "serve-docs": "ipfs-emulator --only -d docs -p 8080",
    "docs:dev": "npm run publish-typedoc && vitepress dev docs",
    "docs:build": "npm run publish-typedoc && vitepress build docs",
    "docs:preview": "vitepress preview docs"
  }
}